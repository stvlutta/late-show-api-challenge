{
  "info": {
    "name": "Late Show API Challenge",
    "description": "Flask REST API for Late Night TV Show system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', responseJson.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Episodes",
      "item": [
        {
          "name": "Get All Episodes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/episodes",
              "host": ["{{base_url}}"],
              "path": ["episodes"]
            }
          }
        },
        {
          "name": "Get Episode with Appearances",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/episodes/1",
              "host": ["{{base_url}}"],
              "path": ["episodes", "1"]
            }
          }
        },
        {
          "name": "Delete Episode (Protected)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/episodes/5",
              "host": ["{{base_url}}"],
              "path": ["episodes", "5"]
            }
          }
        }
      ]
    },
    {
      "name": "Guests",
      "item": [
        {
          "name": "Get All Guests",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/guests",
              "host": ["{{base_url}}"],
              "path": ["guests"]
            }
          }
        }
      ]
    },
    {
      "name": "Appearances",
      "item": [
        {
          "name": "Create Appearance (Protected)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 4,\n  \"guest_id\": 1,\n  \"episode_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/appearances",
              "host": ["{{base_url}}"],
              "path": ["appearances"]
            }
          }
        }
      ]
    }
  ]
}